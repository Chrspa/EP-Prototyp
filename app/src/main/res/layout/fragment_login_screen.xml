<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <ImageView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:src="" />

    <TextView
        android:id="@+id/InputNameRequestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:text="Wie dürfen wir dich nennen?"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="13dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/feedbackText"
        tools:layout_editor_absoluteX="13dp">

        <EditText
            android:id="@+id/editNametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/submitButton1"
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#010221"
            android:text="bestätigen" />


    </LinearLayout>

    <TextView
        android:id="@+id/welcomeView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text="Herzlich Willkommen bei MIND STEPS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_login" />


    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="30dp"
        android:background="#F0F1F1"
        app:layout_constraintBottom_toTopOf="@+id/weiterZuIntroductionLoginButton"
        tools:layout_editor_absoluteX="13dp" />

    <Button
        android:id="@+id/weiterZuIntroductionLoginButton"
        android:layout_width="153dp"
        android:layout_height="68dp"
        android:layout_margin="13dp"
        android:text="einführung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/weiterZuAnalysisLoginButton"
        android:layout_width="153dp"
        android:layout_height="68dp"
        android:layout_margin="13dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>